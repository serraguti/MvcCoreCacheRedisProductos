@model List<Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Favoritos Cache Redis</h1>

<p>
    <a asp-controller="Productos"
       asp-action="Index">
        Volver a Index
    </a>
</p>
@if (Model != null)
{
<table class="table table-warning">
    <thead>
        <tr>
            <th></th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/favorite.png"
                         style="width:150px;height: 150px" />
                </td>
                <td>@item.Nombre</td>
                <td>@item.Precio</td>
                <td><img src="@item.Imagen" style="width:250px;height: 250px" /></td>
                <td>
                    <a asp-controller="Productos"
                       asp-action="EliminarFavorito"
                       asp-route-id="@item.IdProducto">
                        Eliminar favorito
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <h1 style="color:red">
        No hay productos favoritos
    </h1>
}
